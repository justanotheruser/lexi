{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Bot Server Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/bot_server/lexi/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/bot_server",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/bot_server"
            },
            "args": [],
            "justMyCode": false
        },
        {
            "name": "Bot Server with Uvicorn",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "bot_server.lexi.main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--reload"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/bot_server",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/bot_server"
            },
            "justMyCode": false
        },
        {
            "name": "Bot Server Remote Debug",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/workspace"
                }
            ],
            "justMyCode": false
        }
    ]
}